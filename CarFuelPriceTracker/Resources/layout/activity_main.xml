<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#BFD8EF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="368dp"
        android:id="@+id/imgMainPage"
        android:contentDescription="@String/resource/description" 
        android:src="@drawable/mainpage"/>

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="300.0dp"
        android:layout_height="111.0dp"
        android:id="@+id/txtMainPage"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="13.0dp"
        android:layout_marginRight="0.0dp"
        android:textColor="#1E1E1E"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="san-serif"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Find the cheapest petrol station near you"/>
    
    <Button
        android:text="Get Started"
        android:layout_width="245.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnGetStarted"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:textColor="#1E1E1E"
        android:textStyle="bold"
        android:textSize="16sp"/>

</RelativeLayout>